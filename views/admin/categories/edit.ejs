<body>
    <div class="container">
        <hr>
        <div class="card">
            <div class="card-header">
                <h3>Edição de Categoria</h3>
            </div>
            <div class="card-body">
                <form method="POST" action="/categories/update">
                    <input type="text" name="title" placeholder="Defina o título da categoria" class="form-control"
                        value="<%= category.title %>">
                    <br>
                    <input type="hidden" name="id" value="<%= category.id %>">
                    <button class="btn btn-success">Atualizar</button>
                </form>
            </div>
        </div>
    </div>
</body>

