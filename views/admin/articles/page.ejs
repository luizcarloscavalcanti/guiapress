<%- include ("../../partials/header.ejs") %>
<%- include ("../../partials/homenavbar.ejs") %>

<body>
    <div class="container">
        <hr>
        <% result.articles.rows.forEach(article => { %>
        <div class="card">
            <div class="card-header">
                <h2><%= article.title %></h2>
            </div>
            <div class="card-body">
                <a href="/<%= article.slug %>" class="btn btn-success">Ler artigo</a>
            </div>
        </div>
        <% }) %>

        <div class="row">
            <div class="col col-12">

                <% if(result.page > 2) { %>
                <a href="/articles/page/<%= result.page - 1 %>" 
                    style="float: left;"> Anterior</a>
                <% } else if(result.page == 2) { %>
                <a href="/" style="float: left;">Anterior</a>
                <% } %>

                <% if(result.next) { %>
                <a href="/articles/page/<%= result.page + 1 %>" 
                    style="float: right;">Proxima</a>
                <% }%>
            </div>
        </div>
        <hr>
    </div>
</body>

<%- include ("../../partials/footer.ejs") %>